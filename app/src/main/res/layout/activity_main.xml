<!-- res/layout/activity_main.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar at the top -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:title="Welcome"
            android:titleTextColor="@color/white" />

        <!-- Creator Text -->
        <TextView
            android:id="@+id/textViewCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wedding Planner App"
            android:fontFamily="@font/great_vibes"
            android:textStyle="bold"
            android:textColor="#c2185b"
            android:textSize="24sp"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewCreator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made by Pintu"
            android:fontFamily="@font/great_vibes"
            android:textStyle="bold"
            android:textColor="@color/wedding_gold"
            android:textSize="16sp"
            android:layout_below="@id/textViewCreator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <!-- App Image -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/wedding_logo1"
            android:layout_below="@id/textViewCreator2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/playfairdisplay"
            android:textStyle="bold"
            android:background="@color/royalblue"
            android:textColor="@color/white"
            android:layout_below="@id/imageViewLogo"
            android:layout_marginTop="38dp"
            android:layout_marginHorizontal="38dp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/playfairdisplay"
            android:textStyle="bold"
            android:background="@color/ggreen"
            android:textColor="@color/white"
            android:layout_below="@id/buttonLogin"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp" />
    </RelativeLayout>
</ScrollView>
